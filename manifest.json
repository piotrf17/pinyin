{
  "name": "Pinyin",
  "description": "Adds pinyin annotations to webpages. Click 'options' to set the latest known character.",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Add Pinyin!"
  },
  "options_ui": {
    "page": "options.html"
  },
  "manifest_version": 2
}
